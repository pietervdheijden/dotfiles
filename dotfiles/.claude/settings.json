{
  "model": "claude-opus-4-6",
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "DIR_NAME=$(basename \"$PWD\") ; bash ~/.claude/notify.sh \"Claude Code ($DIR_NAME)\" \"Waiting for approval\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "DIR_NAME=$(basename \"$PWD\") ; bash ~/.claude/notify.sh \"Claude Code ($DIR_NAME)\" \"Response ready\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "effortLevel": "medium",
  "attribution": {
    "commit": "",
    "pr": ""
  }
}
